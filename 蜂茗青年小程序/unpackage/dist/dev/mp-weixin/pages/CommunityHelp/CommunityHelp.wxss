.container {
  background-color: #f2f2f2;
}
.head-nav {
  width: 100%;
  height: 130rpx;
  background-color: #f2f2f2;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  z-index: 20;
}
.nav-box {
  width: 95%;
  height: 80%;
  background-color: #fff;
  border-radius: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 2rpx 2rpx 10rpx 1rpx gray;
}
.imgs-box {
  width: 70rpx;
  height: 50rpx;
}
.nav-box ._img {
  width: 50rpx;
  height: 50rpx;
}
.head-swiper {
  padding-top: 150rpx;
}
.head-search-box {
  width: 90%;
  margin-left: auto;
  margin-right: auto;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  position: relative;
}
.head-select-box {
  width: 30%;
  height: 100rpx;
  background-color: red;
  position: absolute;
  right: 0rpx;
  border-radius: 0 100px 100px;
  z-index: 10;
}
.classify-box {
  width: 90%;
  height: 140rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 30rpx;
  margin-right: auto;
  border-radius: 30rpx;
  box-shadow: 2rpx 2rpx 10rpx 1rpx gray;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.classify-item-box {
  width: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 15rpx;
  margin-right: 15rpx;
}
.classify-box ._img {
  width: 60rpx;
  height: 60rpx;
}
.classify-box .classify-text {
  text-align: center;
  font-size: 30rpx;
}
.classify-box .megagame-img {
  width: 120rpx;
}
.body-title {
  width: 300rpx;
  height: 100rpx;
  margin-left: 50rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 4rpx solid black;
}
.body-title .title-img {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 14rpx;
  margin-left: 20rpx;
}
.body-title .title-text {
  font-size: 30rpx;
  font-weight: bolder;
}
.team-box {
  width: 90%;
  height: 260rpx;
  background-color: white;
  margin-left: auto;
  margin-right: auto;
  margin-top: 40rpx;
  border-radius: 20rpx;
}
.team-box-head {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.team-user-avatar {
  width: 350rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid black;
}
.team-user-avatar ._img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 10rpx;
  margin-top: 10rpx;
}
.team-box-class {
  color: #adadad;
  margin-right: 20rpx;
}
.team-box-body {
  width: 98%;
  background-color: #f2f2f2;
  font-size: 30rpx;
  margin-top: 20rpx;
  margin-left: auto;
  margin-right: auto;
  border-radius: 10rpx;
}

